<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    android:layout_margin="5dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.cardview.widget.CardView
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            app:cardCornerRadius="14dp"
            android:id="@+id/image_card_view"
            app:cardElevation="5dp">
            <ImageView
                android:id="@+id/card_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop">
            </ImageView>
            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="visible" />

        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/image_card_view"
            android:text="Mess Name"
            android:maxLines="2"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/mess_name"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rating"
            android:text="4.1"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_below="@id/mess_name"
            android:layout_toEndOf="@id/image_card_view"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/rating"
            android:layout_below="@id/mess_name"
            android:layout_alignTop="@id/rating"
            android:src="@drawable/baseline_star_rate_24"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4.5 Km"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="15dp"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="30dp"
                android:textStyle="bold"
                android:id="@+id/distance"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/rating"
                android:id="@+id/foodType"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@id/image_card_view"
                android:layout_marginLeft="20dp"
                android:text="Non-Veg"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/price"
                android:layout_below="@id/foodType"
                android:layout_toEndOf="@id/image_card_view"
                android:layout_marginLeft="20dp"
                android:text="2000 per/month"/>

    </RelativeLayout>
</androidx.cardview.widget.CardView>